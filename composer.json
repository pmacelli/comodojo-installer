{
    "name": "comodojo/comodojo-installer",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "A modular installer for the Comodojo Project",
    "keywords": [
        "comodojo",
        "installer"
    ],
    "homepage": "https://comodojo.org",
    "authors": [
        {
            "name": "Marco Giovinazzi",
            "email": "marco.giovinazzi@comodojo.org",
            "homepage": "http://jme.altervista.org"
        }
    ],
    "support": {
        "issues": "https://github.com/comodojo/comodojo-installer/issues"
    },
    "autoload": {
        "psr-4": {
             "Comodojo\\Installer\\": "src/Comodojo/Installer"
         }
    },
    "extra": {
        "class": "Comodojo\\Installer\\Plugin"
    },
    "require": {
        "composer-plugin-api": "^1.0",
        "comodojo/foundation": "dev-master",
        "symfony/yaml": "^3.0"
    },
    "require-dev": {
        "composer/composer": "^1.0",
        "phpunit/phpunit": "^4.0|^5.0",
        "scrutinizer/ocular": "^1.0"
    }
}
